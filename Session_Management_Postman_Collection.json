    {
      "name": "Sessions",
      "item": [
        {
          "name": "Get Active Sessions",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has sessions array\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('sessions');",
                  "    pm.expect(response.sessions).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Current session is marked\", function () {",
                  "    const response = pm.response.json();",
                  "    const currentSession = response.sessions.find(s => s.isCurrent === true);",
                  "    pm.expect(currentSession).to.not.be.undefined;",
                  "});",
                  "",
                  "// Save first non-current session ID for revocation test",
                  "const response = pm.response.json();",
                  "const otherSession = response.sessions.find(s => s.isCurrent === false);",
                  "if (otherSession) {",
                  "    pm.environment.set(\"otherSessionId\", otherSession.sessionId);",
                  "    console.log(\"Other session ID saved: \" + otherSession.sessionId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sessions"]
            }
